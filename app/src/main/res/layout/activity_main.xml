<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/guess1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guess #1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/check1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/guess2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guess #2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/check2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/guess3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guess #3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/check3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/targetWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <EditText
        android:id="@+id/inputGuess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter 4 letter guess here"
        android:inputType="text"
        android:maxLength="4"
        android:textAllCaps="true" />


    <Button
        android:id="@+id/submitGuess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GUESS"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
